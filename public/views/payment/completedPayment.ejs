<%- include('../includes/header') %>
<script src="https://js.stripe.com/v3/"></script>
<link href="/assets/css/paymentElement.css" rel="stylesheet" type="text/css">
</head>

<body>
    <%- include('../includes/navbar') %>
    <div class="container mt-3">
        <h1>TravelAloha</h1>
        <p>Thank you to use my service</p>
    </div>
    <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0"><%= hotel[7].hotelName %> x <span class="cart-quantity">1</span></h6>
                <small class="text-muted "><%= booking_head[0].checkinDate %></small>
            </div>
            <span><span class="text-muted shop-item-price"><%= room_detail[0].fullPrice %></span>฿</span>
        </li>
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0"><%= hotel[2].hotelName %> x <span class="cart-quantity">2</span></h6>
                <small class="text-muted"><%= booking_head[0].checkinDate %></small>
            </div>
            <span><span class="text-muted shop-item-price"><%= room_detail[0].fullPrice %></span>฿</span>
        </li>
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0"><%= hotel[1].hotelName %> x <span class="cart-quantity">3</span></h6>
                <small class="text-muted"><%= booking_head[0].checkinDate %></small>
            </div>
            <span><span class="text-muted shop-item-price"><%= room_detail[0].fullPrice %></span>฿</span>
        </li>
        <li class="list-group-item d-flex justify-content-between bg-light">
            <div class="text-success">
                <h6 class="my-0">Promo code</h6>
                <small>EXAMPLECODE</small>
            </div>
            <span class="text-success">-30฿</span>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <span>Total (THB)</span>
            <strong id="cart-total-price"></strong>
        </li>

        <li class="list-group-item d-flex justify-content-between">
            <span>Tax</span>
            <strong id="tax"></strong>
        </li>

        <li class="list-group-item d-flex justify-content-between">
            <span>Earn Point</span>
            <strong><strong id="point"></strong> Points</strong>
        </li>


    </ul>

    <script src="/assets/js/Payment/priceCalculate.js"></script>

    <%- include('../includes/footer') %>