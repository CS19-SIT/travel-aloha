<%- include('../includes/header') %>
<script src="https://js.stripe.com/v3/"></script>
<link href="/assets/css/paymentElement.css" rel="stylesheet" type="text/css">
<link href="/assets/css/couponCard.css" rel="stylesheet" type="text/css">
</head>

<body class="bg-light">
    <%- include('../includes/navbar') %>
    <div class="container">

        <div class="py-5 text-center"></div>

        <div class="row">
            <div class="col-md-4 order-md-3 mb-4">
                <div>
                    <h6 class="my-0"></h6>
                    <span class="text-muted">booking number: <%= booking_head[0].bookingId %></span>
                </div>
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span>Price details</span>
                    <span class="badge badge-secondary badge-pill">3</span>
                </h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0"><%= hotel[1].hotelName %> x <span class="cart-quantity">1</span></h6>
                            <small class="text-muted "><%= booking_head[0].checkinDate %></small>
                        </div>
                        <span><span class="text-muted shop-item-price"><%= room_detail[0].fullPrice %></span>฿</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0"><%= hotel[1].hotelName %> x <span class="cart-quantity">2</span></h6>
                            <small class="text-muted"><%= booking_head[0].checkinDate %></small>
                        </div>
                        <span><span class="text-muted shop-item-price"><%= room_detail[0].fullPrice %></span>฿</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0"><%= hotel[1].hotelName %> x <span class="cart-quantity">3</span></h6>
                            <small class="text-muted"><%= booking_head[0].checkinDate %></small>
                        </div>
                        <span><span class="text-muted shop-item-price"><%= room_detail[0].fullPrice %></span>฿</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">Promo code</h6>
                            <small>EXAMPLECODE</small>
                        </div>
                        <span class="text-success">-30฿</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (THB)</span>
                        <strong id="cart-total-price"></strong>
                    </li>

                    <li class="list-group-item d-flex justify-content-between">
                        <span>Tax</span>
                        <strong id="tax"></strong>
                    </li>


                </ul>

                <div>
                    <h6 class="my-0"></h6>
                    <span class="text-muted">The guest: <%= booking_detail[0].firstName %></span>
                </div>
            </div>

            <div class="col-md-8 order-md-1">
                <form action="checkout/charge" method="post" id="payment-form">


                    <hr class="mb-4">
                    <h4 class="mb-3">Payment</h4>


                    <!-- paymentForm-by-striepElement -->
                    <div class="col-md-12 mb-3">
                        <label for="card-element">
                            Credit or debit card
                        </label>
                        <div id="card-element">
                            <!-- A Stripe Element will be inserted here. -->
                        </div>

                        <!-- Used to display form errors. -->
                        <div id="card-errors" role="alert" style="color: #DC3545;"></div>
                    </div>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Submit Payment</button>

                </form>
                </form>
                <br>
                <div class="container">
                    <a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseExample1" role="button"
                        aria-expanded="false" aria-controls="multiCollapseExample1">Add discount code</a>
                    <div class="collapse multi-collapse" id="multiCollapseExample1">
                        <div class="col-md-12 mb-3">
                            <br>
                            <form class="card p-2">
                                <div class="input-group">
                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                        data-target="#couponSelectModal">
                                        Choose coupon
                                    </button>
                                    <input type="text" class="form-control" placeholder="Promo code" type="text"
                                        name="coupon-code" data-target="#couponSelectModal">
                                    <div class="input-group-append"><button type="submit"
                                            class="btn btn-secondary">Redeem</button>
                                    </div>
                                </div>
                               <!-- Modal -->
                               <div class="modal fade" id="couponSelectModal" tabindex="-1" role="dialog"
                                   aria-labelledby="couponSelectModal" aria-hidden="true">
                                   <div class="modal-dialog modal-lg" role="document">
                                       <div class="modal-content">
                                           <div class="modal-header">
                                               <h5 class="modal-title" id="couponSelectModalLabel">Available Coupons
                                               </h5>
                                               <button type="button" class="close" data-dismiss="modal"
                                                   aria-label="Close">
                                                   <span aria-hidden="true">&times;</span>
                                               </button>
                                           </div>
                                           <div class="modal-body">
                                               <div class="coupon-table">
                                                   <div class="row">
                                                       <div class="col-lg-4 coupon-table-col">
                                                           <div class="card coupon-card"
                                                               data-coupon-code=<%= coupon[1].code %>>
                                                               <div class="card-body">
                                                                   <h5 class="card-title"><%= coupon[1].code %></h5>
                                                                   <p class="card-text">
                                                                       <%= coupon[1].discount_percentage%></p>
                                                               </div>
                                                           </div>
                                                       </div>
                                                       <div class="col-lg-4 coupon-table-col">
                                                           <div class="card coupon-card"
                                                               data-coupon-code=<%= coupon[2].code %>>
                                                               <div class="card-body">
                                                                   <h5 class="card-title"><%= coupon[2].code %></h5>
                                                                   <p class="card-text">
                                                                       <%= coupon[2].discount_percentage%></p>
                                                               </div>
                                                           </div>
                                                       </div>
                                                       <div class="col-lg-4 coupon-table-col">
                                                           <div class="card coupon-card"
                                                               data-coupon-code=<%= coupon[3].code %>>
                                                               <div class="card-body">
                                                                   <h5 class="card-title"><%= coupon[3].code %></h5>
                                                                   <p class="card-text">
                                                                       <%= coupon[3].discount_percentage%></p>
                                                               </div>
                                                           </div>
                                                       </div>
                                                   </div>
                                                   <div class="row">
                                                       <div class="col-lg-4 coupon-table-col">
                                                           <div class="card coupon-card"
                                                               data-coupon-code=<%= coupon[4].code %>>
                                                               <div class="card-body">
                                                                   <h5 class="card-title"><%= coupon[4].code %></h5>
                                                                   <p class="card-text">
                                                                       <%= coupon[4].discount_percentage%></p>
                                                               </div>
                                                           </div>
                                                       </div>
                                                       <div class="col-lg-4 coupon-table-col">
                                                           <div class="card coupon-card"
                                                               data-coupon-code=<%= coupon[5].code %>>
                                                               <div class="card-body">
                                                                   <h5 class="card-title"><%= coupon[5].code %></h5>
                                                                   <p class="card-text">
                                                                       <%= coupon[5].discount_percentage%></p>
                                                               </div>
                                                           </div>
                                                       </div>
                                                   </div>
                                               </div>
                                           </div>
                                           <div class="modal-footer">
                                               <button type="button" class="btn btn-secondary"
                                                   data-dismiss="modal">Cancel</button>
                                           </div>
                                       </div>
                                   </div>
                               </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>

    </div>
    </div>
    </div>
    <footer class="my-5 pt-5 text-muted text-center text-small"></footer>
    <script>
        $(".coupon-card").click(function (e) {
            const code = $(e.target).data("coupon-code") || $($(e.target).parents(".coupon-card")).data(
                "coupon-code");
            $("input[name=coupon-code]").val(code);
            $("#couponSelectModal").modal("hide");
        });
    </script>
    <script src="/assets/js/Payment/card.js"></script>
    <script src="/assets/js/Payment/priceCalculate.js"></script>



    <%- include('../includes/footer') %>