            </div>

        </div>

        <div class="col-lg-9">
            <% hotels.forEach( hotel => { %>
            <div class="card card-3">
                <div class="d-flex justify-content-between">
                    <div class="col-7">
                        <div class="textresult">
                            <h3><%= hotel.hotelName %></h3>
                            <h4><%= hotel.hotelAddress %></h4>
                            <!-- <h4><%= hotel.hotelDescription %></h4> -->
                            <h4><%= hotel.hoteltelNumber %></h4>

                            <% if (!user) { %>
                            <h1><%= hotel.fullPrice %></h1>

                            <a href="/login">Log in</a> to check out your price!
                            <% } %>
                            <% if (user) { %>
                            <h1>Price</h1>
                            <u>
                                <h1>from: price</h1>
                            </u>
                            <% } %>
                            <% if (hotel.wifi==1) { %>
                            MEE WIFI
                            <% } %>
                            <% if (hotel.breakfast==1) { %>
                            MEE Breakfast
                            <% } %>
                            <!-- <button class="mdc-icon-button material-icons">favorite</button> -->
                            <div class="like-container">
                                <div class="like-cnt unchecked" id="like-cnt">
                                    <i class="like-btn material-icons">thumb_up</i>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div>
                        <img src="<%= hotel.hotelPicture %>" class="hotelpic">
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

