<style>
    html,
    body,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: "Roboto", sans-serif;
        font-size: 20px;
    }

    .row {
        height: 900px;
        width: 100%;
    }
</style>

<body>
    <div class="row">
        <div class="col-lg-3">

            <div class="card">
                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Price</h6>
                    </header>
                    <div class="filter-content">
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Min</label>
                                    <input type="number" class="form-control" id="inputEmail4" placeholder="0" min="1">
                                </div>
                                <div class="form-group col-md-6 text-right">
                                    <label>Max</label>
                                    <input type="number" class="form-control" placeholder="1000" min="1">
                                </div>
                            </div>
                        </div> <!-- card-body.// -->
                    </div>
                </article> <!-- card-group-item.// -->
                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Room Features </h6>
                    </header>
                    <div class="filter-content">
                        <div class="card-body">
                            <form>
                                <label class="form-check">
                                    <input class="form-check-input" type="checkbox" value="">
                                    <span class="form-check-label">
				                        <i class="fa fa-wifi" aria-hidden="true"></i> WiFi
				                    </span>
                                </label> <!-- form-check.// -->
                                <label class="form-check">
                                    <input class="form-check-input" type="checkbox" value="">
                                    <span class="form-check-label">
                                        <i class="fa fa-cutlery" aria-hidden="true"></i> Breakfast
				                    </span>
                                </label>  <!-- form-check.// -->
                                <label class="form-check">
                                    <input class="form-check-input" type="checkbox" value="">
                                    <span class="form-check-label">
                                        <i class="fa fa-car" aria-hidden="true"></i> Parking
				                    </span>
                                </label>  <!-- form-check.// -->
                            </form>

                        </div> <!-- card-body.// -->
                    </div>
                </article> <!-- card-group-item.// -->

                <article class="card-group-item">
                    <header class="card-header">
                        <h6 class="title">Room type </h6>
                    </header>
                    <div class="filter-content">
                        <div class="card-body">
                            <label class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadio" value="">
                                <span class="form-check-label">
                                    Single
                                </span>
                            </label>
                            <label class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadio" value="">
                                <span class="form-check-label">
                                    Double
                                </span>
                            </label>
                            <label class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadio" value="">
                                <span class="form-check-label">
                                    Studio
                                </span>
                            </label>
                        </div> <!-- card-body.// -->
                    </div>
                </article> <!-- card-group-item.// -->
            </div> <!-- card.// -->

        </div>

        <div class="col-lg-9">
         <% hotels.forEach( hotel => { %>
            <div class=" card card-3">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="textresult">
                            <h3><a href="hotel/<%= hotel.hotelId %>"><%= hotel.hotelName %></a>a</h3>
                            <h4><%= hotel.hotelAddress %></h4>
                            <h4><%= hotel.hotelDescription %></h4>
                            <h4><%= hotel.hoteltelNumber %></h4>
                            <h1>From: <b><%= hotel.fullPrice %></b></h1>

                            <% if (hotel.wifi==1) { %>
                                <i class="fa fa-wifi" aria-hidden="true"></i>
                            <% } %>
                            <% if (hotel.breakfast==1) { %>
                                <i class="fa fa-cutlery" aria-hidden="true"></i>
                            <% } %>
                            <% if (hotel.carpark==1) { %>
                                <i class="fa fa-car" aria-hidden="true"></i>
                            <% } %>
                        </div>

                    </div>
                    <div class="col-lg-5">
                        <img src="<%= hotel.hotelPicture %>" class="img-responsive col-xs-12">
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

    </div>


    <%- include('../includes/footer') %>