                                <% } %>
                            </div>
                            <div class="d-flex flex-column pl-3">
                                <a class="black-text" href="#">
                                    <h4><%= hotelReview[i].firstname %></h4>
                                </a>
                                <% if(user && hotelReview[i].userId == user.user_id) {%>
                                <form method="DELETE"
                                    action="/review/hotel/<%= hotelId %>/<%= hotelReview[i].idHotel_Review %>/delete">
                                    <button type="submit">Delete</button>
                                </form>
                                <% } %>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-0 mb-0">
                            <p class="font-weight-bold">
