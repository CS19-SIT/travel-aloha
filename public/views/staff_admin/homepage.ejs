<%- include('../includes/header') %>

	<style>
		#departmentPicture 	 {
			width: 70vw;
			height: 50vw;
		}
		deptPicture {
			background-color: black;
			background-size: cover;
			background-position: center 10%;
			background-repeat: no-repeat;
		}
	</style>
</head>
<body>
    <% departments = JSON.parse(departmentList) %>

    <div id="departmentPicture" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
					<% for (let i = 0; i < departments.length; ++i) { %>
						<% if (i == 0) { %>
							<li data-target="#departmentPicture" data-slide-to="0" class="active"></li>
						<% } else { %>
							<li data-target="#departmentPicture" data-slide-to="<%= i %>"></li>
					<% } 
					} %>
				</ol>
				<div class="carousel-inner w-100 h-100">
					<% for (let i = 0; i < departments.length; ++i) { %>
						<% if (i == 0) { %>
							<div class="carousel-item w-100 h-100 active">
								<deptPicture class="d-block w-100 h-100" style="background-image: url('<%= departments[0][`deptPicture`] %>');"></deptPicture>
							</div>
						<% } else { %>		
							<div class="carousel-item w-100 h-100">
								<deptPicture class="d-block w-100 h-100" style="background-image: url('<%= departments[i][`deptPicture`] %>');"></deptPicture>
							</div>
					<% } 
					} %>
				</div>
				<a class="carousel-control-prev" href="#departmentPicture" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#departmentPicture" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>

<%- include('../includes/footer') %>