<%- include('../includes/header') %>

	<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
	<style>
		body {
			width: 100vw;
			min-width: 320px;
			-webkit-user-select: none;
		}
		/** BEGIN: header setting */
		header {
			position: relative;
			height: calc(100vh - 56px);
			min-height: 550px;
			background-image: url("https://nucleuscoshare.org/wp-content/uploads/2014/06/working-at-desk-nucleus.jpg");
			background-color: #000;
			background-repeat: no-repeat;
			background-size: cover;
			background-position: center;
		}
		@media screen and (min-width: 992px) {
			header {
			   height: calc(100vh - 70px);
			}
		}
		header > h7 {
			font-size: 8.75vw;
		}
		@media screen and (min-width: 630px) {
			header > h7 {
			   font-size: 55px;
			}
		}
		@media screen and (max-width: 320px) {
			header > h7 {
			   font-size: 28px;
			}
		}
		/** END: header setting */
		header > detail {
			width: 60%;
			min-width: 290px;
			max-width: 800px;
		}
		.create-button, .overview-button {
			display: inline-block;
			min-width: 100px;
			font-size: 0.95rem;
			padding: 0.8rem 1.3rem;
			transition: all 0.3s;
		}
		.create-button {
			color: white;
			border: 1px solid white;
			background-color: transparent;
		}
		.overview-button {
			color: black;
			border: 1px solid black;
			background-color: white;
		}
		.create-button:hover, .overview-button:hover {
			text-decoration: underline;
			cursor: pointer;
		}
		.create-button:active, .overview-button:active {
			transform: scale(0.7);
		}
		article {
			padding: 6rem 1rem;
		}
		section {
			min-width: 300px;
			max-width: 750px;
			text-align: center;
			margin: 1.5rem 0;
		}
	</style>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.8/angular.min.js"></script>
</head>

