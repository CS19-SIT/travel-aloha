<%- include('../includes/header') %>

	<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
	
	<style>
		body {
			min-width: 375px;
			min-height: 100vh;
			padding-bottom: 2rem;
			background-color: rgba(0, 0, 0, 0.1);
		}
		header {
			display: block;
			position: relative;
			min-height: 500px;
			height: 100vh;
		}
		header > background {
			background-color: #000;
			display: block;
			position: absolute;
			top: 0; right: 0; bottom: 0; left: 0;
			background-image: url("https://www.larutadelsorigens.cat/wallpic/full/35-350784_beach-house-maldives-wallpaper-maldives-water-desktop-background.jpg");
			background-attachment: fixed;
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}
		#applyButton {
			cursor: pointer;
			width: fit-content;
			padding: 1rem 1.5rem;
			border: 1px solid #059;
			border-radius: 100rem;
			background-color: #059;
			transform: scale(0.9);
		}
		#applyButton:hover, #applyButton:active {
			color: #eee;
			border: 1px solid #eee;
			background-color: #09f;
			transform: scale(1);
		}
		content {
			animation: fadeup 0.5s linear;
		}
		content > h1 {
			font-size: 4.2rem;
		}
		@keyframes fadeup {
			0% { transform: scale(1.5); }
			60% { transform: scale(0.7); }
		}
		#companyAds {
			max-width: 1000px;
			margin: 3.5rem auto;
		}
		#companyAds > div[data-aos] {
			background-color: rgb(239, 239, 239);
			overflow-wrap: break-word;
			word-break: break-all;
			text-align: center;
			padding: 1.2rem;
		}
		photoGrid .col-6, photoGrid .col-12 {
			padding: 0;
			margin: 0;
		}
		photoGrid .photo {
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
			cursor: pointer;
			transition: 0.1s;
			position: relative;
		}
		header > background:after, photoGrid .photo:after {
			content: "";
			position: absolute;
			top: 0; right: 0; bottom: 0; left: 0;
			pointer-events: none;
			background: hsla(250, 0%, 0%, 0.3);
		}
		photoGrid .photo:hover:after, photoGrid .photo:active:after {
			background: hsla(250, 0%, 0%, 0);
		}
		photoGrid .photo:hover, photoGrid .photo:active {
			transform: scale(0.9);
		}
		photoGrid .photo.col-6 {
			height: 240px;
		}
		photoGrid .photo.col-12 {
			height: 120px;
		}
		photoGrid .photo .picture-name {
			position: absolute;
			bottom: 1rem;
			left: 50%;
			transform: translateX(-50%);
			color: #fff;
			-webkit-text-stroke: 1px #000;
			font-size: 1.6rem;
			z-index: 9;
		}
	</style>

</head>

<body> 

	<header class="d-flex flex-column justify-content-center align-items-center">
		<background></background>
		<content class="d-flex flex-column align-items-center text-center" style="max-width: 800px; z-index: 9; color: #eee;">
