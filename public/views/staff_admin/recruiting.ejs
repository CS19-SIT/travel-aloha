<%- include('../includes/header') %>
<%- include('../includes/navbar') %>

	<style>
		background {
			background-image: url("../../assets/Pictures/staff_admin/recruiting-wallpaper.png");
			background-color: #dedede;
			background-repeat: no-repeat;
			background-position: center;
			padding: 3.5rem 0;
		}
		submitForm {
			background-color: rgba(255, 255, 255, 0.7);
			padding: 1.2rem 1.7rem;
			width: 60%;
			min-width: 280px;
			max-width: 700px;
		}
		profilePicture {
			width: 80%;
			height: 200px;
			background-color: black;
			background-size: cover;
			background-repeat: no-repeat;
			background-position: center 15%;
		}
		label {
			display: inline-block;
		}
	</style>
</head>

<body>
	<background class="d-flex w-100 justify-content-center">
		<submitForm class="row rounded pt-5">

			<iconZone class="col-md-6 col-12 pb-4 d-flex justify-content-center">
				<profilePicture></profilePicture>
			</iconZone>
			<informationZone class="col-md-6 col-12 d-flex justify-content-center">
				<existedInformation>
					<p style="font-size: 0.9rem;">
						<yTitle class="text-capitalize font-weight-bold"></yTitle>:
						&nbsp;<yDetail></yDetail>
					</p>
				</existedInformation>
			</informationZone>

			<hr class="w-100 p-1 mt-4" />

			<h2 class="text-center py-2" style="font-size: 1.5rem;">Staff Recruiting Form</h2>
			<newInformation class="d-block w-100">
				<!-- Provide text fields here -->
				<label for="department">Department</label><br/>
				<input type="text" id="department" class="form-control" placeholder="Type your wanted department"/><br/>
				<label for="salary">Salary</label><br/>
				<input type="text" id="salary" class="form-control" placeholder="Type your wanted salary" />
				
			</newInformation>

			<buttonDirection class="d-block w-100 text-right mt-4">
				<button id="submitButton" type="button" class="btn btn-primary">submit</button>
			</buttonDirection>

		</submitForm>
	</background>

	<script>
		var data = JSON.parse('<%- data %>')
	</script>
	<script src="../../assets/js/staff_admin/recruiting.js"></script>

<%- include('../includes/footer') %>