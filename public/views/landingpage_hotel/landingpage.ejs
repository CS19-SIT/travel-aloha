<%- include('../includes/header') %>

<!--css-->
<link rel="stylesheet" href="css/bootstrap.css">
<link rel="stylesheet" href="vendors/linericon/style.css">
<link rel="stylesheet" href="css/font-awesome.min.css">
<link rel="stylesheet" href="vendors/owl-carousel/owl.carousel.min.css">
<link rel="stylesheet" href="vendors/bootstrap-datepicker/bootstrap-datetimepicker.min.css">
<link rel="stylesheet" href="vendors/nice-select/css/nice-select.css">
<link rel="stylesheet" href="vendors/owl-carousel/owl.carousel.min.css">

<link rel="stylesheet" href="assets/css/landingpage.css">

</head>

<body>
    <%- include('../includes/navbar') %>
    <div class="header-pic">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-lg-6">
                    <div class="header-text">
                        <center>
                            <h1 class="mt-5">Find your hotel</h1>
                            <!-- <p>Find your best hotel.</p> -->
                            <a href="#down"> <button type="button" class="btn btn-info">Click !</button> </a>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="down">
        <div class="s012">

            <!-- form -->
            <form action="/hotel/find" method="POST" onsubmit="return validateForm()">
                <fieldset>
                    <legend>Search Hotels</legend>
                </fieldset>
                <div class="inner-form">
                    <div class="main-form" id="main-form">
                        <div class="row second">
                            <div class="input-wrap-des">
                                <div class="icon-wrap">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path
                                            d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z">
                                        </path>
                                    </svg>
                                </div>
                                <div class="input-field">
                                    <label>GOING TO</label>
                                    <input type="text" name="place" placeholder="Destination, hotel name" />
                                </div>
                            </div>
                            <div class="input-wrap">
                                <div class="icon-wrap">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path
                                            d="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z">
                                        </path>
                                    </svg>
                                </div>
                                <div class="input-field">
                                    <label>TRAVELERS</label>
                                    <div class="input-select">
                                        <select data-trigger="" name="adult">
                                            <option value="1">1 adult</option>
                                            <option value="2">2 adults</option>
                                            <option value="3">3 adults</option>
                                            <option value="4">4 adults</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row second">
                            <div class="input-wrap">
                                <div class="icon-wrap">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path
                                            d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z">
                                        </path>
                                    </svg>
                                </div>
                                <div class="input-field">
                                    <label>CHECK-IN</label>
                                    <input class="datepicker" name="checkIn" type="text" placeholder="mm/dd/yy" />
                                </div>
                            </div>
                            <div class="input-wrap">
                                <div class="icon-wrap">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path
                                            d="M17 12h-5v5h5v-5zM16 1v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-1V1h-2zm3 18H5V8h14v11z">
                                        </path>
                                    </svg>
                                </div>
                                <div class="input-field">
                                    <label>CHECK-OUT</label>
                                    <input class="datepicker" name="checkOut" type="text" placeholder="mm/dd/yy" />
                                </div>
                            </div>
                            <div class="input-wrap">
                                <div class="icon-wrap">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path
                                            d="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z">
                                        </path>
                                    </svg>
                                </div>
                                <div class="input-field">
                                    <label>TRAVELERS</label>
                                    <div class="input-select">
                                        <select data-trigger="" name="child">
                                            <option value="1">1 child</option>
                                            <option value="2">2 children</option>
                                            <option value="3">3 children</option>
                                            <option value="4">4 children</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row last">
                            <input type="submit" class="btn-search" value="search" \>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- recommended card -->
    <div class="card-box">
            <a href="#" class="btn btn-fix text-left">
        <% hotels.forEach( hotel => { %>
        <div class="card-recommended">
            <div class="card" style="width: 18rem;">
                <img src="<%= hotel.hotelPicture %>" class="card-img-top" alt="<%= hotel.hotelName %>">
                <div class="card-body">
                    <p><%= hotel.hotelName %></p>
                </div>
            </div>
        </div>
        <% }) %>
    </div>







    <script src="../assets/js/choices.js"></script>
    <script>
        const choices = new Choices('[data-trigger]', {
            searchEnabled: false,
            itemSelectText: '',
        });
    </script>
    <script src="../assets/js/flatpickr.js"></script>
    <script>
        flatpickr(".datepicker", {
            dateFormat: "m/d/y"
        });
        var btnTypes = document.querySelectorAll('.travel-type-wrap .item')
        for (let i = 0; i < btnTypes.length; i++) {
            btnTypes[i].addEventListener('click', function () {
                for (let i = 0; i < btnTypes.length; i++) {
                    btnTypes[i].classList.remove('active')
                }
                btnTypes[i].classList.add('active')
            })
        }
    </script>

<script>
    function validateForm() {
      var x = document.forms["myForm"]["place"].value;
      if (x == "") {
        swal("Name must be filled out");
        return false;
      }
    }


    $(function() {
        $('.datepicker').datepicker({
            endDate: new Date()
        });
    });


</script>


    <%- include('../includes/footer') %>