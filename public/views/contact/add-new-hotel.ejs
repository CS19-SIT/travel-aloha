<%- include('../includes/header') %>

<link rel="stylesheet" href="../../assets/stylesheet/style.css">
</head>
<body>
    <%- include('../includes/navbar') %>
  <div class="container-fluid bg-3">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <form method="POST" action="/contact/add-new-hotel">
          <h1 class="display-4">Hotel Information</h1>
          <br>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputHotelName">Hotel Name</label>
              <input type="text" class="form-control" placeholder="Your Hotel Name" name="hotelName" required>
            </div>
            <div class="form-group col-md-6">
              <label for="inputHotelEmail">Hotel Email</label>
              <input type="text" class="form-control" placeholder="Your Hotel Email" name="hotelEmail" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputHotelAddress">Hotel Address</label>
            <input type="text" class="form-control" placeholder="Your Hotel Address" name="hotelAddress" required>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputHotelTel">Hotel Tel. Number</label>
              <input type="tel" class="form-control" placeholder="Your Hotel ID" name="hotelTelNumber" maxlength="10" required>
            </div>
            <div class="form-group col-md-6">
              <label for="inputHotelContact">Hotel Contact Number</label>
              <input type="tel" class="form-control" placeholder="Your Hotel Name" name="hotelContactNumber" maxlength="10" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputHotelDes">Hotel Description</label>
            <textarea class="form-control" name="hotelDescription" required></textarea>
            <small id="descriptionInfo" class="form-text text-muted">
              short description for your airline information
            </small>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputHotelProfile">Hotel Profile</label>
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile" name="hotelProfile">
                <label class="custom-file-label" for="customFile">Choose file</label>
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="inputHotelPic">Hotel Picture</label>
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile" name="hotelPicture">
                <label class="custom-file-label" for="customFile">Choose file</label>
              </div>
            </div>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" onclick="optional()">
            <label class="form-check-label" for="defaultCheck1">
              If your hotel have logo click here
            </label>
          </div>
          <div class="form-row" id="hiddenLogo">
            <div class="form-group col-md-6">
              <label for="inputHotelLogo">Hotel Logo</label>
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile" name="hotelLogo">
                <label class="custom-file-label" for="customFile">Choose file</label>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary" value="submit">Sent Your Information</button>
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <script src="../../assets/js/contact.js"></script>
  <%- include('../includes/footer') %>