<%- include('../includes/header') %>
<%- include('../includes/navbar') %>
<link rel="stylesheet" href="../../assets/stylesheet/style.css">
</head>

<body>
  <div class="container-fluid bg-3">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <form method="POST" action="/contact/add-new-hotel">
          <h1 class="display-4">Hotel Information</h1>
          <br>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputHotel_ID">Hotel ID</label>
              <input type="text" class="form-control" placeholder="Your Hotel ID" name="hotelId" id="hotelId">
            </div>
            <div class="form-group col-md-6">
              <label for="inputHotelName">Hotel Name</label>
              <input type="text" class="form-control" placeholder="Your Hotel Name" name="hotelName" id="hotelName">
            </div>
          </div>
          <div class="form-group">
            <label for="inputHotelAddress">Hotel Address</label>
            <input type="text" class="form-control" placeholder="Your Hotel Addressing" name="hotelAddress" id="hotelAddress">
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputHotelTel">Hotel Tel. Number</label>
              <input type="tel" class="form-control" placeholder="Your Hotel ID" name="hotelTelNumber" id="hotelTelNumber">
            </div>
            <div class="form-group col-md-6">
              <label for="inputHotelContact">Hotel Contact Number</label>
              <input type="tel" class="form-control" placeholder="Your Hotel Name" name="hotelContactNumber" id="hotelTelContactNumber">
            </div>
          </div>
          <div class="form-group">
            <label for="inputHotelDes">Hotel Description</label>
            <textarea class="form-control" name="hotelDescription" id="hotelDescription"></textarea>
            <small id="descriptionInfo" class="form-text text-muted">
              Description for tell your Hotel information  
            </small>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputHotelProfile">Hotel Profile</label>
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile hotelProfile" name="hotelProfile">
                <label class="custom-file-label" for="customFile">Choose file</label>
              </div>
            </div>
            <div class="form-group col-md-6">
              <label for="inputHotelPic">Hotel Picture</label>
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile hotelPic" name="hotelPic">
                <label class="custom-file-label" for="customFile">Choose file</label>
              </div>
            </div>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" onclick="optional()">
            <label class="form-check-label" for="defaultCheck1">
              If your hotel have logo click here
            </label>
          </div>
          <div class="form-row" id="hiddenLogo">
            <div class="form-group col-md-6">
              <label for="inputHotelLogo">Hotel Logo</label>
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile hotelLogo" name="hotelLogo">
                <label class="custom-file-label" for="customFile">Choose file</label>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn success-color">Sent Your Information</button>
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <%- include('../includes/footer') %>