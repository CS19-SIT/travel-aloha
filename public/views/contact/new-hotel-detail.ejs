<body>
    <%- include('../includes/navbar') %>
    <div class="responsive-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="display-4 p-2">New Hotel Name</h1>
                </div>
                <div class="col-md-12">
                    <div class="text-center"><img class="hotel-pic rounded mx-auto d-block"
