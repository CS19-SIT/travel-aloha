<%- include('../includes/header') %>
<link rel="stylesheet" href="../../assets/css/hotel-booking-payment.css">

</head>

<body>
  <%- include('../includes/navbar') %>
  <!-- <%= hotelData %> -->
  <div class="container mt-3">
    <div class="row no-gutters">
      <h1>Room Booking</h1>
    </div>


    <div class="row no-gutters mt-4">
      <h3 class="hotel-name">Review and Payment</h3>
    </div>

    <div class="row no-gutters mt-3">
      <h4>Details</h4>
    </div>

    <div class="row no-gutters">
      <div class="container-bordered detail-container">
        <div class="detail-list user-detail-list">
          <h5>Your Information</h5>
          <p>Contact Name <span><%-hotelData.inputFirstName+"   "+hotelData.inputLastName -%></span></p>
          <p>Email <span><%- hotelData.inputEmail-%></span></p>
          <p>Phone Number <span><%- hotelData.inputPhoneNo-%>></span></p>
        </div>
        <div class="detail-list booking-detail-list">
          <h5>Booking Detail</h5>
          <h6>Hotel <span><%-hotelData.hotelName%></span></h6>
          <p>Duration <span>1 <%= hotelData.stayDuration == 1 ? 'Night' : 'Nights'%></span></p>
          <p>Room Type <span><%= hotelData.roomType %></span></p>
          <p>Check-in : <span><%= hotelData.checkInDate.toString().substr(3, 12) %>, From 15:00</span></p>
          <p>Check-out : <span><%= hotelData.checkOutDate.toString().substr(3, 12) %>, Before 12:00</span></p>
        </div>
        <div class="detail-list price-detail-list">
          <h5>Price Detail</h5>
          <p class="price-detail">(1x) Suite Room (1 Night) <span>THB <%= hotelData.hotelFullPrice %>.00</span></p>
          <p>Additional Fees <span>FREE</span></p>
          <h5 class="price-total">Total <span>THB <%= hotelData.hotelFullPrice %>.00</span></h5>
        </div>
      </div>
    </div>

    <form method="POST" class="" id="hotel-booking-payment-form" action="/hotel/booking/confirmbooking">
      <div class="form-row">
        <input type="hidden" id="input-first-name" class="form-control" name="inputFirstName" placeholder="First Name"
          value="<%= hotelData.inputFirstName %>" required>
        <input type="hidden" id="input-last-name" class="form-control" name="inputLastName" placeholder="Last Name"
          value="<%= hotelData.inputLastName %>" required>
        <input type="hidden" class="form-control" id="input-email" name="inputEmail" placeholder="Email"
          value="<%= hotelData.inputEmail%>" required>
        <input type="hidden" id="input-phone-no" class="form-control" name="inputPhoneNo" placeholder="Phone Number"
          value="<%= hotelData.inputPhoneNo%>" required>
        <input type="hidden" id="check-in-date" name="checkInDate" value="<%= hotelData.checkInDate%>" required>
        <input type="hidden" id="check-out-date" name="checkOutDate" value="<%= hotelData.checkOutDate%>" required>
        <input type="hidden" id="hotel-id" name="hotelID" value="<%= hotelData.hotelID%>" required>
        <input type="hidden" id="room-id" name="roomID" value="<%= hotelData.roomID%>" required>
        <input type="hidden" id="hotel-full-price" name="hotelFullPrice" value="<%= hotelData.hotelFullPrice%>" required>
        <input type="hidden" id="hotel-sale-price" name="hotelSalePrice" value="<%= hotelData.hotelSalePrice%>" required>
      </div>
    </form>
    <button type="submit" class="btn btn-primary btn-submit" form="hotel-booking-payment-form">Book</button>
  </div>

  <script src="../../assets/js/hotel-booking-payment.js"></script>
  <%- include('../includes/footer') %>
</body>