                </li>
            </ul>
        </nav>

        <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add new coupon</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form>
                        <div class="modal-body">
                            <div class="form-group row">
                                <label class="col-form-label col-md-3">
                                    Code
                                </label>
                                <div class="col">
                                    <input type="text" class="form-control" name="code">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-3">
                                    Name
                                </label>
                                <div class="col">
                                    <input type="text" class="form-control" name="name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-3">
                                    Description
                                </label>
                                <div class="col">
                                    <textarea class="form-control" name="description"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-3">
                                    Start date
                                </label>
                                <div class="col">
                                    <input type="date" class="form-control" name="startDate">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-3">
                                    End date
                                </label>
                                <div class="col">
                                    <input type="date" class="form-control" name="endDate">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-md-3">Level</label>
                                <div class="col">
                                    <select name="coupon-new-level" class="form-control coupon-level-select" multiple="multiple">
                                        <option value="lv4" selected>Diamond</option>
                                        <option value="lv3" selected>Platinum</option>
                                        <option value="lv2" selected>Gold</option>
                                        <option value="lv1" selected>Silver</option>
                                    </select>
                                </div>
                            </div>
                            <hr>
                            <div>
                                <input class="d-inline" type="checkbox" name="hotel">
                                <div class="ml-1 d-inline"></div>
                                <h4 class="d-inline">Hotel</h4>
                               
                                <div class="form-group row">
                                    <div class="col-md-3">Allow</div>
                                    <div class="col">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" id="hotelForAll"
                                                name="hotelFor" value="all" checked>
                                            <label class="form-check-label" for="hotelForAll">For every hotel</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" id="hotelForSome"
                                                name="hotelFor" value="some" checked>
                                            <label class="form-check-label" for="hotelForSome">For some hotel</label>
                                        </div>
                                    </div>
                                    <div class="border w-100 my-2" style="height: 250px;">
                                        TODO
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div>
                                <input class="d-inline" type="checkbox" name="hotel">
                                <div class="ml-1 d-inline"></div>
                                <h4 class="d-inline">Airline</h4>
                               
                                <div class="form-group row">
                                    <div class="col-md-3">Allow</div>
                                    <div class="col">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" id="flightForAll"
                                                name="flightFor" value="all" checked>
                                            <label class="form-check-label" for="flightForAll">For every airline</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" id="flightForAll"
                                                name="flightFor" value="some" checked>
                                            <label class="form-check-label" for="flightForAll">For some airline</label>
                                        </div>
                                    </div>
                                    <div class="border w-100 my-2" style="height: 250px;">
                                        TODO
                                    </div>
                                </div>
                                <div class="mb-3"></div>
                                <div class="form-group row">
                                    <label class="col-form-label col-md-3">Discount</label>
                                    <div class="col">
                                        <div class="input-group">
                                            <input class="form-control" type="number">
                                            <div class="input-group-append">
                                                <div class="input-group-text">%</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

