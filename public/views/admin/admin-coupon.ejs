<%- include('../includes/header') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" integrity="sha256-FdatTf20PQr/rWg+cAKfl6j4/IY3oohFAJ7gVC3M34E=" crossorigin="anonymous">

</head>

<body>
<%- include('../includes/navbar') %>

    <!-- Description -->
    <div class="container">
        <div class="py-4 row">
            <div class="col-sm-10">
                <h1>Coupon Management</h1>
            </div>
            <div class="col-sm-2">
                <button class="btn btn-primary w-100" data-toggle="modal" data-target="#addModal">Add</button>
            </div>
        </div>
        <form>
            <div class="form-row">
                <div class="form-group col-sm-3">
                    <select class="form-control" id="inlineFormCustomSelectPref">
                        <option value="1" selected>Code</option>
                        <option value="2">Description</option>
                        <option value="3">Name</option>
                    </select>
                </div>
                <div class="form-group col-sm-8">
                    <!-- Search-->
                    <input class="form-control" type="text" placeholder="Search" id="search">
                </div>
                <div class="form-group col-sm-1">
                    <!-- Search button-->
                    <button type="button" class="btn btn-primary" id="searchBut">Search</button>
                </div>
            </div>
            <!-- Level-->
            <div class="form-group row">
                <label class="col-form-label col-md-1">Level</label>
                <div class="col-md-11">
                    <select name="coupon-search-level" class="form-control coupon-level-select" multiple="multiple">
                        <option value="lv4" selected>Diamond</option>
                        <option value="lv3" selected>Platinum</option>
                        <option value="lv2" selected>Gold</option>
                        <option value="lv1" selected>Silver</option>
                    </select>
                </div>
            </div>
            <!--Type-->
            <div class="form-group row">
                <div class="col-md-1">Type</div>
                <div class="col-md-11">
                    <div class="form-check form-check-inline">
                        <input type="checkbox" id="customCheckboxInline1" name="customCheckboxInline1"
                            class="form-check-input" checked>
                        <label class="form-check-label" for="customCheckboxInline1">Flight</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="checkbox" id="customCheckboxInline2" name="customCheckboxInline1"
                            class="form-check-input" checked>
                        <label class="form-check-label" for="customCheckboxInline2">Hotel</label>
                    </div>
                </div>
            </div>
        </form>
        <div>
            <br>
            <!-- Table-->
            <div class="table-responsive-xl">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">CODE</th>
                            <th scope="col">START DATE</th>
                            <th scope="col">EXPIRE DATE</th>
                            <th scope="col">EDIT</th>
                            <th scope="col">DELETE</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(const coupon of coupons) { %>
                        <tr>
                            <td><a href="#" data-toggle="modal" data-target="#viewModal"><%= coupon.code %></a></td>
                            <td><%= coupon.start_date == null ? "-" : coupon.start_date.toLocaleDateString() %></td>
                            <td><%= coupon.end_date == null ? "-" : coupon.end_date.toLocaleDateString() %></td>
                            <td>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal" data-coupon-code="<%= coupon.code %>">
                                    Edit
                                </button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" data-coupon-code="<%= coupon.code %>">
                                    Delete
                                </button>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Pagination-->
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">&laquo;</a>
                </li>
                <% for(let i = 1; i <= pageCount; i++) { %>
                    <li class="page-item"><a class="page-link" href="/admin/coupon/<%= i %>"><%= i %></a></li>
                <% } %>
                    <a class="page-link" href="#">&raquo;</a>
                </li>
            </ul>
        </nav>
    </div>

    <%- include('admin-coupon-form-modal', {
        id: "addModal",
        title: "Add new coupon",
        buttonActionValue: "Add"
    }) %>
    
    <%- include('admin-coupon-form-modal', {
        id: "editModal",
        title: "Edit coupon",
        buttonActionValue: "Edit"
    }) %>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete coupon</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="deleteModalForm">
                    <div class="modal-body">
                        <p>Delete ???</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>    

    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewModalLabel">View coupon</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>View ???</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" id="view-edit-button" class="btn btn-primary" data-coupon-code="">
                        Edit
                    </button>
                    <button type="button" id="view-delete-button" class="btn btn-danger" data-coupon-code="">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js" integrity="sha256-wfVTTtJ2oeqlexBsfa3MmUoB77wDNRPqT1Q1WA2MMn4=" crossorigin="anonymous"></script>
    <script src="/assets/js/admin-coupon.js"></script>
    
<%- include('../includes/footer') %>