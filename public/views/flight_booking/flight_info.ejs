<%- include('../includes/header') %>

<link href="../../assets/css/booking_style.css" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<%- include('../includes/navbar') %>
</head>
<style>
    .card.mb-3, #summary{
        margin-top: 20px;
    }
</style>
<body>
    <div class="container my-3">
        <div class="row">
            <!-- Flight info part -->
            <div class="col-md-8">
                <!-- Flight header -->
            <form method = "POST" action = "contact">
            <%for (let i = 0; i < info.length; i++) { %>
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-9 flight-head">
                                <i class="fa fa-plane">&nbsp;</i><%=info[i]['dep_city']%>&nbsp;<span class="airport-code"><%=info[i]['Departure']%></span>
                                <i class="fa fa-long-arrow-right"></i>
                                <%=info[i]['des_city']%>&nbsp;<span class="airport-code"><%=info[i]['Destination']%></span>
                            </div>
                            <div class="align-bottom date text-right col-md-3">
                                <%=info[i]['Dep_Date']%>
                            </div>
                        </div>
                    </div>
                <!-- </div> -->
                <!-- Info card -->
                <!-- <div class="card"> -->
                    <div class="card-body">
                        <div class="row">
                            <p class="col-md-10">
                                <%=info[i]['Dep_Day']%>, <%=info[i]['Dep_Date']%>
                            </p>
                            <div class="col-md-2 text-right save-flight">
                                <i class="fa fa-bookmark-o" data-toggle="tooltip" data-placement="top" title="Bookmark this flight"></i>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-1">
                                <img src="../../assets/images/<%=info[i]['airline_logo']%>" alt="logo" class="airline-logo">
                            </div>
                            <div id = "flightNumber"class="col-md-11 pl-2">
                                <span><%= info[i]['Flight_number'] %>
                                    <br><%=seatClass%>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="time-block col-md-3">
                                Departure - <%=info[i]['Dep_time']%><br>
                                <%=info[i]['dep_city']%><span class="airport-code">&nbsp;<%=info[i]['Departure']%></span>

                            </div>
                            <div class="time-block col-md-3">
                                Arrival - <%=info[i]['Arr_time']%><br>
                                <%=info[i]['des_city']%><span class="airport-code">&nbsp;<%=info[i]['Destination']%></span>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
                <!-- <a href="/flight/booking/contact" class="btn btn-info mt-2 book align-bottom">Book Now</a> -->
                <button type="submit" class="btn btn-info mt-2 book align-bottom">Book now</button>
            </div>

            <!-- Billing part -->
            <div class="col-md-4" id="summary">
                <div class="card">
                    <div class="card-body">
                        <h4>Summary</h4>
                        <% let sum=100; 
                        for (let i = 0; i < info.length; i++) { %>
                        <div class="font-weight-bold"><%=info[i]['Departure']%>&nbsp;<i class="fa fa-arrow-right"></i>&nbsp;<%=info[i]['Destination']%></div>
                        <div><%=info[0]['Dep_Day']%>, <%=info[i]['Dep_Date']%></div>
                        <div><%=info[i]['Dep_time']%> - <%=info[i]['Arr_time']%> <span class="airport-code">(<%=info[i]['timespan']%>)</span></div>
                        <div class="row">
                            <div class="col-md-8"><%=info[i]['airlineName']%> <%=seatClass%> (<%=passager%>)</div>
                            <div class="text-right col-md-4">1,649 &#3647; </div>
                        </div>
                        <%}%>
                        <div class="text-right mt-5">
                            <div class="row">
                                <div class="col-md-8">Pay</div>
                                <div class="col-md-4"><%=sum%> &#3647; </div>
                                <input type="hidden" id="selectedFlight" name="selectedFlight">
                            </div>
                            <div class="row">
                                <div class="col-md-8">VAT 7%</div>
                                <div class="col-md-4"><%-(sum*0.07).toFixed(0)%> &#3647; </div>
                            </div>
                            <div class="row font-weight-bold">
                                <div class="col-md-8">Total</div>
                                <div class="col-md-4"><%-(sum*1.07).toFixed(0)%> &#3647; </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        </div>

    </div>

    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

    <%- include('../includes/footer') %>