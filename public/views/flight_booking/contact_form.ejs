<%- include('../includes/header') %>

<link href="../../assets/css/booking_style.css" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<%- include('../includes/navbar') %>

</head>

<body>
    <div class="container my-3">

        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9 flight-head">
                        <i class="fa fa-plane">&nbsp;</i>Bangkok&nbsp;<span class="airport-code">BKK</span>
                        <i class="fa fa-long-arrow-right"></i>
                        &nbsp;Chiang Mai&nbsp;<span class="airport-code">CNX</span>
                    </div>
                    <div class="align-bottom date text-right col-md-3">
                        03-Nov-2019
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h4>Contact</h4>
                        </div>
                        <div class="card-text">
                            <form>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label for="firstname">Firstname</label>
                                        <input type="name" class="form-control" id="fname" aria-describedby="firstname"
                                            placeholder="Enter firstname">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="firstname">Lastname</label>
                                        <input type="name" class="form-control" id="lname" aria-describedby="lastname"
                                            placeholder="Enter lastname">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1"
                                        aria-describedby="emailHelp" placeholder="Enter email">
                                </div>
                                <div class="form-group">
                                    <label for="phone">Phone number</label>
                                    <input type="phone" class="form-control" id="phone" aria-describedby="phone"
                                        placeholder="Enter phone number">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <h3 class="card-body">Passenger Information<span>
                        <button type="submit" onclick="addPasenger()" class="btn btn-outline-dark btn-sm">Add
                            Passenger</button>
                    </span></h3>

                <ul id="passenger" style="list-style-type:none; padding-left: 0;">
                    <li>
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Passenger 1
                                </h5>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label for="firstname">Firstname</label>
                                        <input type="name" class="form-control" id="fname" aria-describedby="firstname"
                                            placeholder="Enter firstname">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="firstname">Lastname</label>
                                        <input type="name" class="form-control" id="lname" aria-describedby="lastname"
                                            placeholder="Enter lastname">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label for="exampleFormControlSelect1">Gender</label>
                                        <select class="form-control" id="exampleFormControlSelect1">
                                            <option>Male</option>
                                            <option>Female</option>
                                            <option>Others</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="firstname">Date of Birth</label>
                                        <input id="datepicker" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label for="exampleFormControlSelect1">Identification type</label>
                                        <select class="form-control" id="exampleFormControlSelect1">
                                            <option>Citizen ID</option>
                                            <option>Passport number</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-8">
                                        <label for="CID-Passport">Citizen ID / Passport number</label>
                                        <input type="name" class="form-control" id="CID-Passport"
                                            aria-describedby="CID-Passport" placeholder="">
                                    </div>
                                </div>
                                </form>
                            </div>
                        </div>
                    </li>
                </ul>


                <button type="submit" class="btn btn-primary" data-toggle="modal"
                    data-target="#summary_info">Submit</button>

                <div class="modal fade" id="summary_info" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Summary</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="card-text">
                                    <div class="mb-3">
                                        <h5>Flight</h5>
                                        <div class="font-weight-bold">BKK&nbsp;<i
                                                class="fa fa-arrow-right"></i>&nbsp;CNX
                                        </div>
                                        <div>1 Person Economy Class</div>
                                        <div>Sunday, 03-Nov-2019</div>
                                        <div>20:25 - 21:45 <span class="airport-code">(1.20 Hours)</span></div>
                                    </div>
                                    <div class="mb-3">
                                        <h5>Contact</h5>
                                        <div>John Doe</div>
                                        <div>johndoe@mail.com</div>
                                        <div>0123456789</div>
                                    </div>
                                    <div class="mb-3">
                                        <h5>Passenger 1 Info</h5>
                                        <div>John Doe</div>
                                        <div>Male</div>
                                        <div>09-Nov-2019</div>
                                    </div>
                                    <div class="text-right">
                                        <div class="row">
                                            <div class="col-md-8">Nok Air Economy (1)</div>
                                            <div class="col-md-4">1,649 &#3647; </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">VAT 7%</div>
                                            <div class="col-md-4">115.43 &#3647; </div>
                                        </div>
                                        <div class="row font-weight-bold">
                                            <div class="col-md-8">Total</div>
                                            <div class="col-md-4">1964.43 &#3647; </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Checkout</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4'
        });
    </script>

    <%- include('../includes/footer') %>