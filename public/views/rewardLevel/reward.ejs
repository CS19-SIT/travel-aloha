<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Reward</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" media="screen" href="main.css">
  <script src="main.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="../assets/css/extension1.css" type="text/css" />
<link rel="stylesheet" href="../assets/css/ticket.css" type="text/css" />

</head>

<body>

  <header>
    <div class="pointbg shadow"><br />
      <div class="point shadow">
        <p>points</p>
      </div>
      <p><%= point %></p>
    </div>

    <div class="ribbonTab">
      <div id="circle">
        <div id="gift">
          <div id="ribbonGift"></div>
          <div id="giftbox"></div>
        </div>
      </div>
      <h1>Reward</h1>
    </div>

    <div class="container py-2">
      <!--All div-->

      <!--Carousel for Advertisement-->
      <div class="row-carousel">
        <div id="carouselAdvertisement" class="carousel slide carousel-fade" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselAdvertisement" data-slide-to="0" class="active"></li>
            <li data-target="#carouselAdvertisement" data-slide-to="1"></li>
            <li data-target="#carouselAdvertisement" data-slide-to="2"></li>
            <li data-target="#carouselAdvertisement" data-slide-to="3"></li>
          </ol>

          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="../assets/img/flight2.jpg" alt="First slide">
              <div class="carousel-caption d-none d-md-block">
                <h5>Every Flight has a Price!</h5>
                <p>Get points when you purchase every flight.</p>
              </div>
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="../assets/img/hotel1.jpg" alt="Second slide">
              <div class="carousel-caption d-none d-md-block">
                <h5>What we've got here is failure to communicate.</h5>
                <p>Cool Hand Luke, 1967</p>
              </div>
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="../assets/img/ent1.jpg" alt="Third slide">
              <div class="carousel-caption d-none d-md-block">
                <h5>Go ahead, make my day.</h5>
                <p>Sudden Impact, 1983</p>
              </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../assets/img/food2.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Not only Flight and Hotel Vouchers!</h5>
                  <p>You can also get Food and Entertainment coupons fulfil your days.</p>
                </div>
              </div>
          </div>

          <a class="carousel-control-prev" href="#carouselAdvertisement" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselAdvertisement" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>

        </div>
      </div>
    </div>
    </div>
    <!--Carousel for Advertisement-->
  </header>

  <div class="container py-2">
    <div class="row-coupon shadow" style="border-radius: 10px;border-top: 5px solid #114d96;">
      <div class="col-sm-12 sidenav">
        <h2>Coupon & Reward</h2>
        <!-- <ul class="nav nav-tabs nav-fill" style="padding: 10px;margin: 10px">
          <li class="nav-item">
            <a class="nav-link active" id="valid" href="#validcoupon">Valid</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="used" onclick="openCoupon(event, 'usedcoupon')" href="#usedcoupon">Used</a>
          </li>
        </ul> -->

        <div class="tab">
            <button class="tablinks" onclick="openCity(event, 'validcoupon')" id="defaultOpen">Valid</button>
            <button class="tablinks" onclick="openCity(event, 'usedcoupon')">Used</button>
          </div>

        <div class="col-sm-12" style="text-align: center;padding: 0px">
          
        <div id="validcoupon" class="tabcontent" >
          <!--Acc Coupon-->
          <% for(var key of Object.keys(couponsAC) ) { %>
            <div class="coupon">
                <img src="../assets/img/travel1.png" alt="Avatar" style="width:100%;">
                <div class="coupon-container" style="background-color:white">
                  <h2><b><%= couponsAC[key].Discount %></b> BAHT OFF YOUR PURCHASE<br>
                    Limit Purchase: <%= couponsAC[key].Limit %>
                  </h2>
                </div>
                <div class="coupon-container">
                  <p>Use Promo Code: <span class="promo"><%= couponsAC[key].CouponCode %></span></p>
                  <p class="expire">Expires: <%= couponsAC[key][expDate] %></p>
                </div>
            </div>
          <% };%>
          <!--End Acc Coupon-->

          <!--Ent Coupon-->
          <% for(var key of Object.keys(couponsEn) ) { %>
            <div class="coupon">
                <img src="../assets/img/travel1.png" alt="Avatar" style="width:100%;">
                <div class="coupon-container" style="background-color:white">
                  <h2><b><%= couponsEn[key].Discount %></b> BAHT OFF YOUR PURCHASE<br>
                    Limit Purchase: <%= couponsEn[key].Limit %>
                  </h2>
                </div>
                <div class="coupon-container">
                  <p>Use Promo Code: <span class="promo"><%= couponsEn[key].CouponCode %></span></p>
                  <p class="expire">Expires: <%= couponsEn[key][expDate] %></p>
                </div>
            </div>
          <% };%>
          <!--End Ent Coupon-->

          <!--Flight Coupon-->
          <% for(var key of Object.keys(couponsFl) ) { %>
            <div class="coupon">
                <img src="../assets/img/travel1.png" alt="Avatar" style="width:100%;">
                <div class="coupon-container" style="background-color:white">
                  <h2><b><%= couponsFl[key].Discount %></b> BAHT OFF YOUR PURCHASE<br>
                    Limit Purchase: <%= couponsFl[key].Limit %>
                  </h2>
                </div>
                <div class="coupon-container">
                  <p>Use Promo Code: <span class="promo"><%= couponsFl[key].CouponCode %></span></p>
                  <p class="expire">Expires: <%= couponsFl[key][expDate] %></p>
                </div>
            </div>
          <% };%>
          <!--End Flight Coupon-->

          <!--Food Coupon-->
          <% for(var key of Object.keys(couponsFo) ) { %>
            <div class="coupon">
                <img src="../assets/img/travel1.png" alt="Avatar" style="width:100%;">
                <div class="coupon-container" style="background-color:white">
                  <h2><b><%= couponsFo[key].Discount %></b> BAHT OFF YOUR PURCHASE<br>
                    Limit Purchase: <%= couponsFo[key].Limit %>
                  </h2>
                </div>
                <div class="coupon-container">
                  <p>Use Promo Code: <span class="promo"><%= couponsFo[key].CouponCode %></span></p>
                  <p class="expire">Expires: <%= couponsFo[key][expDate] %></p>
                </div>
            </div>
          <% };%>
          <!--End Food Coupon-->
        </div>

          <!--Acc Used Cou-->
          <div id="usedcoupon" class="tabcontent">
              <% for(var key of Object.keys(usedCouponAc) ) { %>
            <div class="coupon">
              <img src="../assets/img/travel1.png" alt="Avatar"
                style="width:100%;">
              <div class="coupon-container" style="background-color:white">
                <h2 style="color:#cf212a">
                  Used Date: <%= usedCouponAc[key][usedDate] %>
                </h2>
              </div>
              <div class="coupon-container">
                <p>Used Promo Code: <span class="promo"><%= usedCouponAc[key].CouponCode %></span></p>
              </div>
            </div>
            <% };%>
            <!--End Acc Used Cou-->

            <!--Ent Used Cou-->
            <% for(var key of Object.keys(usedCouponEn) ) { %>
              <div class="coupon">
                <img src="../assets/img/travel1.png" alt="Avatar"
                  style="width:100%;">
                <div class="coupon-container" style="background-color:white">
                  <h2 style="color:#cf212a">
                    Used Date: <%= usedCouponEn[key][usedDate] %>
                  </h2>
                </div>
                <div class="coupon-container">
                  <p>Used Promo Code: <span class="promo"><%= usedCouponEn[key].CouponCode %></span></p>
                </div>
              </div>
              <% };%>
              <!--End Ent Used Cou-->
              
              <!--Flight Used Cou-->
              <% for(var key of Object.keys(usedCouponFl) ) { %>
                <div class="coupon">
                  <img src="../assets/img/travel1.png" alt="Avatar"
                    style="width:100%;">
                  <div class="coupon-container" style="background-color:white">
                    <h2 style="color:#cf212a">
                      Used Date: <%= usedCouponFl[key][usedDate] %>
                    </h2>
                  </div>
                  <div class="coupon-container">
                    <p>Used Promo Code: <span class="promo"><%= usedCouponFl[key].CouponCode %></span></p>
                  </div>
                </div>
                <% };%>
                <!--End Flight Used Cou-->
                
                <!--Food Used Cou-->
                <% for(var key of Object.keys(usedCouponFo) ) { %>
                  <div class="coupon">
                    <img src="../assets/img/travel1.png" alt="Avatar"
                      style="width:100%;">
                    <div class="coupon-container" style="background-color:white">
                      <h2 style="color:#cf212a">
                        Used Date: <%= usedCouponFo[key][usedDate] %>
                      </h2>
                    </div>
                    <div class="coupon-container">
                      <p>Used Promo Code: <span class="promo"><%= usedCouponFo[key].CouponCode %></span></p>
                    </div>
                  </div>
                  <% };%>
                  <!--End Food Used Cou-->
          </div>
        <p style="color:#cf212a; font-size: 15px;text-align: center;margin-top: 10px">No more valid voucher!!!</p>
      </div>
    </div>
  </div>
  <!--close all div-->


  <script>
      function openCity(evt, cityName) {
          var i, tabcontent, tablinks;
          tabcontent = document.getElementsByClassName("tabcontent");
          for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
          }
          tablinks = document.getElementsByClassName("tablinks");
          for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
          }
          document.getElementById(cityName).style.display = "block";
          evt.currentTarget.className += " active";
        }

        document.getElementById("defaultOpen").click();
      </script>

</body>

</html>
