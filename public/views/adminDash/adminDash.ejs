      <hr>
      
      <b><center>Most booking hotel</center></b>
        <canvas id="myChart" width="100px" height="50px">
      <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        
        var data = {
            labels: [<% for(var i = 0; i <famousData.length;i++) { %>
              <% if(famousData[i].hotelId_booking == 2) {%>
                "LaLaHotel"    
              <% } %>
            
             <% } %>
             ],
            datasets: [
                
                {
                    label: "booking times",
                    backgroundColor: "gray",
                    data: [<% for(var i = 0; i <famousData.length;i++) { %>
              <%= famousData[i].countID %>
             <% } %>]
                }
                
            ],
            options: {
        title: {
            display: true,
            text: 'Custom Chart Title'
        }
    }
        };
        
        
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
        
        </script>
